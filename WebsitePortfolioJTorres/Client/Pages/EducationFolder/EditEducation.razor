    Resume resume = new Resume();

    private async Task AddNewEducation()
    {
        Console.WriteLine("AddContact called from EditEducation.razor");
        await _resumeService.AddEducation(resume.MyEducation);
        StateHasChanged();
    }

    protected async Task UpdateEducation()
    {
        Console.WriteLine("Update Called from EditEducation.razor");
    }


    void Cancel()
    {
        _urlNavigationManager.NavigateTo("/resume");
    }

