@page "/"
@inject NavigationManager urlNavigationManager




<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">


        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav text-uppercase ml-auto">
                <li><button type="submit" class="btn btn-link" @onclick="ResumePage">Resume</button></li>
                <li><button type="submit" class="btn btn-link" @onclick="BlogPage">Blog Page</button></li>
                <li><button type="submit" class="btn btn-link" @onclick="MyProjectsPage">My Projects</button></li>
                <li><button type="submit" class="btn btn-link" @onclick="ChatPage">Chat</button></li>
                <li><button type="submit" class="btn btn-link" @onclick="ContactMePage">Contact Me</button></li>
            </ul>
        </div>
    </div>
    <div class="top-row px-4 auth">
        <LoginDisplay />
        @*<button type="submit" class="alert-info" @onclick="RedirectHome">Return Home</button>*@

    </div>
</nav>
<!-- Masthead-->
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome to my Website!</div>
        <div class="masthead-heading text-uppercase">My name is Jerome, and It's Nice To Meet You</div>
        <button class="btn btn-primary btn-xl text-uppercase" @onclick="AboutMePage">Get To Know Me</button>
    </div>
</header>





@code
    {
    private void ResumePage()
    {
        urlNavigationManager.NavigateTo("resume");
    }

    private void BlogPage()
    {
        urlNavigationManager.NavigateTo("blogpage");
    }

    private void MyProjectsPage()
    {
        urlNavigationManager.NavigateTo("projects");
    }
    private void AboutMePage()
    {
        urlNavigationManager.NavigateTo("aboutme");
    }
    private void ChatPage()
    {
        urlNavigationManager.NavigateTo("chat");
    }

    private void ContactMePage()
    {
        urlNavigationManager.NavigateTo("email");
    }



}