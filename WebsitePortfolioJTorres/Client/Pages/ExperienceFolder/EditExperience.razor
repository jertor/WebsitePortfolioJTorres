@page "/editexp"
@using WebsitePortfolioJTorres.Shared.Interfaces;
@using WebsitePortfolioJTorres.Shared.Models;
@using Microsoft.AspNetCore.Components
@inject HttpClient _httpClient
@inject NavigationManager _urlNavigationManager
@inject IResumeService _resumeService
<!--Header-->
<h3>Edit Experience</h3>

<!--Body-->
<EditForm Model="@resume">

    <!--Employer-->
    <div class="form-group row mb1">
        <label class="col-sm-3 col-form-label">Employer:</label>
        <div class="col-sm-3">
            <InputText class="form-control"
                       @bind-Value="@resume.MyExperience.Employer" />
            @*<ValidationMessage For="@resume.MyExperience.Employer"/>*@

        </div>
    </div>

    <!--StartDate-->
    <div class="form-group row mb1">
        <label class="col-sm-3 col-form-label">Start:</label>
        <div class="col-sm-3">
            <InputDate class="form-control"
                       @bind-Value="@resume.MyExperience.StartDate" />
            @*<ValidationMessage For="@resume.MyExperience.StartDate"/>*@
        </div>
    </div>

    <!--EndDate-->
    <div class="form-group row mb1">
        <label class="col-sm-3 col-form-label">End:</label>
        <div class="col-sm-3">
            <InputDate class="form-control"
                       @bind-Value="@resume.MyExperience.EndDate" />
            @*<ValidationMessage For="@resume.MyExperience.EndDate"/>*@
        </div>
    </div>

    <!--Buttons-->
    <div class="form-group">
        <!--Add Experience-->
        <button type="submit" class="btn btn-primary" @onclick="AddNewExperience">Add</button>
        <!--SaveChanges-->
        <button type="submit" class="btn btn-primary" @onclick="UpdateExperience">Save</button>
        <!--Cancel-->
        <button class="btn btn-light" @onclick="@Cancel">Cancel</button>
    </div>

</EditForm>


@code {

    Resume resume = new Resume();

    private async Task AddNewExperience()
    {
        Console.WriteLine("AddNewExperience called from EditExperience.razor");
        await _resumeService.AddExperience(resume.MyExperience);
        StateHasChanged();
    }

    protected async Task UpdateExperience()
    {
        Console.WriteLine("Update Called from EditEducation.razor");
    }


    void Cancel()
    {
        _urlNavigationManager.NavigateTo("/resume");
    }

    protected async Task HandleValidSubmit()
    {

    }


}
